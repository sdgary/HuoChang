   	<!-- GreenDroid UI Tool -->
   	<style name="GreenDroid" />
	<style name="GreenDroid.Widget" />
	
	<style name="GreenDroid.Widget.QuickAction" ></style>
	<style name="GreenDroid.Widget.QuickAction.Bar" ></style>

	
	<style name="GreenDroid.Widget.QuickAction.Item">
		<item name="android:layout_height">fill_parent</item>
		<item name="android:paddingRight">10dp</item>
		<item name="android:paddingLeft">10dp</item>
		<item name="android:drawablePadding">5dp</item>
		<item name="android:textSize">20sp</item>
		<item name="android:textColor">#333</item>
	</style>

	<style name="GreenDroid.Widget.QuickAction.Grid.Item" parent="@style/GreenDroid.Widget.QuickAction.Item">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">65dp</item>
	</style>
	   
	<!-- GreenDroid PopDownMenu -->
	<style name="GreenDroid.Animation" />
	
	<style name="GreenDroid.Animation.PopDown" />

	<style name="GreenDroid.Animation.PopDown.Right">
		<item name="@android:windowEnterAnimation">@anim/gd_grow_from_topright_to_bottomleft</item>
		<item name="@android:windowExitAnimation">@anim/gd_shrink_from_bottomleft_to_topright</item>
	</style>
	<style name="GreenDroid.Animation.PopDown.Center">
		<item name="@android:windowEnterAnimation">@anim/gd_grow_from_top</item>
		<item name="@android:windowExitAnimation">@anim/gd_shrink_from_bottom</item>
	</style>
	
	<style name="GreenDroid.Animation.PopUp" />
	<style name="GreenDroid.Animation.PopUp.Left">
		<item name="@android:windowEnterAnimation">@anim/gd_grow_from_bottomleft_to_topright</item>
		<item name="@android:windowExitAnimation">@anim/gd_shrink_from_topright_to_bottomleft</item>
	</style>
	<style name="GreenDroid.Animation.PopUp.Right">
		<item name="@android:windowEnterAnimation">@anim/gd_grow_from_bottomright_to_topleft</item>
		<item name="@android:windowExitAnimation">@anim/gd_shrink_from_topleft_to_bottomright</item>
	</style>
	<style name="GreenDroid.Animation.PopUp.Center">
		<item name="@android:windowEnterAnimation">@anim/gd_grow_from_bottom</item>
		<item name="@android:windowExitAnimation">@anim/gd_shrink_from_top</item>
	</style>
    
    <!-- OSChina App -->
    <style name="Animation" />
    <style name="Animation.Translucent" parent="@style/Animation">
        <item name="android:windowEnterAnimation">@anim/translucent_zoom_out</item>
        <item name="android:windowExitAnimation">@anim/translucent_zoom_exit</item>
    </style>
    <style name="Animation.SlideTop" parent="@style/Animation">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_up</item>
        <item name="android:activityOpenExitAnimation">@null</item>
        <item name="android:activityCloseEnterAnimation">@null</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_down</item>
    </style>
    <style name="Animation.ZoomLight" parent="@style/Animation">
        <item name="android:activityOpenEnterAnimation">@anim/translucent_zoom_in</item>
        <item name="android:activityOpenExitAnimation">@null</item>
        <item name="android:activityCloseEnterAnimation">@null</item>
        <item name="android:activityCloseExitAnimation">@anim/translucent_zoom_exit</item>
    </style>

    <style name="Dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/full_transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowContentOverlay">@null</item> 
        <item name="android:background">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>


    





    <style name="Theme.NoTitleBar" parent="@android:style/Theme.NoTitleBar">
        <item name="android:windowContentOverlay">@null</item> 
    </style>
    <style name="Theme.HalfTranslucent" parent="@android:style/Theme.Translucent">
        <item name="android:windowBackground">@color/half_transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/Animation.Translucent</item>
        <item name="android:windowContentOverlay">@null</item> 
    </style>
    <style name="Theme.FullTranslucent" parent="@android:style/Theme.Translucent">
        <item name="android:windowBackground">@color/full_transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/Animation.Translucent</item>
        <item name="android:windowContentOverlay">@null</item> 
    </style>
    <style name="Theme.SlideTop" parent="@android:style/Theme.NoTitleBar">
        <item name="android:windowAnimationStyle">@style/Animation.SlideTop</item>
        <item name="android:windowContentOverlay">@null</item> 
    </style>
    <style name="Theme.ZoomLight" parent="@android:style/Theme.NoTitleBar">
        <item name="android:windowAnimationStyle">@style/Animation.ZoomLight</item>
        <item name="android:windowContentOverlay">@null</item> 
    </style>
    <style name="Theme.ZoomLight.Fullscreen" parent="@android:style/Theme.NoTitleBar.Fullscreen">
        <item name="android:windowAnimationStyle">@style/Animation.ZoomLight</item>
        <item name="android:windowContentOverlay">@null</item> 
    </style>





   	<style name="main_footbar_cutline">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

