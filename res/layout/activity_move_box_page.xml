<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_wood"
    android:paddingBottom="15dp"
    android:id="@+id/main_layout"
 	 >

	<LinearLayout
	      android:id="@+id/mainPanel"
	      android:layout_width="fill_parent"
	      android:layout_height="wrap_content"
	      android:layout_marginLeft="12dp"
	      android:layout_marginRight="12dp"
	      android:layout_marginTop="15dp"
	      android:layout_marginBottom="15dp"
	      android:background="@drawable/radio_bg"
	      android:orientation="vertical" >
	      
		  <TextView
		     android:layout_width="wrap_content"
		     android:layout_height="wrap_content"
		     android:layout_gravity="center_horizontal"
		     android:layout_marginBottom="7dp"
		     android:layout_marginTop="7dp"
		     android:text="计划正文"
		     android:textColor="#444444"
		     android:textSize="18sp" />
		
		    <TextView
		        android:id="@+id/yxjhId"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginBottom="5dp"
		        android:layout_marginTop="10dp"
		        android:text="计划ID:"
		        android:textColor="#444444"
		        android:textSize="16sp" />
		    
		    <TextView
		        android:id="@+id/status"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginBottom="5dp"
		        android:layout_marginTop="10dp"
		        android:text="类型:"
		        android:textColor="#444444"
		        android:textSize="16sp" />
		    
			 <TextView
		        android:id="@+id/jzxcode"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginBottom="5dp"
		        android:layout_marginTop="10dp"
		        android:text="箱主代码:"
		        android:textColor="#444444"
		        android:textSize="16sp" />
			 
		    <TextView
		        android:id="@+id/jzxnum"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginBottom="5dp"
		        android:layout_marginTop="10dp"
		        android:text="集装箱号码:"
		        android:textColor="#444444"
		        android:textSize="16sp" />
		    
		    <TextView
		        android:id="@+id/oldHw"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginBottom="5dp"
		        android:layout_marginTop="10dp"
		        android:text="原箱位"
		        android:textColor="#444444"
		        android:textSize="16sp" />
		    
		    <TextView
		        android:id="@+id/gdm"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginBottom="5dp"
		        android:layout_marginTop="10dp"
		        android:text="股道:"
		        android:textColor="#444444"
		        android:textSize="16sp" />
		    
		    <TextView
		        android:id="@+id/newHw"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginBottom="5dp"
		        android:layout_marginTop="10dp"
		        android:text="新箱位:"
		        android:textColor="#444444"
		        android:textSize="16sp" />
		
		    <TextView
		        android:id="@+id/workTime"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginBottom="5dp"
		        android:layout_marginTop="10dp"
		        android:text="执行时间:"
		        android:textColor="#444444"
		        android:textSize="16sp" />
		    
		    <Button
		        android:id="@+id/changeXW"
		        android:layout_marginTop="10dp"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:background="@drawable/button_blue"
		        android:text="调整箱位"
		        android:padding="10dp"
		        android:textColor="#ffffff"
		        android:textSize="16sp"/>
		    
		    <LinearLayout
		      android:id="@+id/spinnerLayout"
		      android:layout_width="fill_parent"
		      android:layout_height="wrap_content"
		      android:layout_marginLeft="32dp"
		      android:layout_marginRight="32dp"
		      android:layout_marginBottom="15dp"
		      android:background="@drawable/radio_bg"
		      android:orientation="vertical" >
		    
		    <Spinner
		        android:id="@+id/spinnerTrack"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginBottom="5dp" />
		    
			 <Spinner android:id="@+id/spinnerArea"   
		         android:layout_width="fill_parent"  
		         android:layout_height="wrap_content"
		         android:layout_marginBottom="5dp" />
			 
			 <Spinner android:id="@+id/spinnerPos"   
		         android:layout_width="fill_parent"  
		         android:layout_height="wrap_content"
		         android:layout_marginBottom="5dp" />
			 
			 <Spinner android:id="@+id/spinnerLastPos"   
		         android:layout_width="fill_parent"  
		         android:layout_height="wrap_content"
		         android:layout_marginBottom="5dp" />
			</LinearLayout>
			 
			<Button
		        android:id="@+id/commit"
		        android:layout_marginTop="10dp"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:background="@drawable/button_yellow"
		        android:text="执行"
		        android:padding="10dp"
		        android:textColor="#ffffff"
		        android:textSize="16sp" 
		        android:layout_marginBottom="10dp"/> 
			 
		    <Button
		        android:id="@+id/cancel"
		        android:layout_marginTop="10dp"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:background="@drawable/button_blue"
		        android:text="取消"
		        android:padding="10dp"
		        android:textColor="#ffffff"
		        android:textSize="16sp" 
		        android:layout_marginBottom="20dp"/>
		    <Button
		        android:id="@+id/refuse"
		        android:layout_marginTop="10dp"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"

		        android:text="拒收"
		        android:padding="10dp"
		        android:textColor="#ffffff"
		        android:textSize="16sp" 
		        android:layout_marginBottom="20dp"/>
	</LinearLayout>
</ScrollView>