<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".AcZxTaskOne" 
    android:background="@drawable/bg_wood">

	<ScrollView
	    android:id="@+id/scrollView1"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_marginLeft="12dp"
	    android:layout_marginRight="12dp"
	    android:layout_marginTop="15dp"
	    android:layout_marginBottom="10dp" 
	    android:layout_above="@+id/btn_layout">

        <LinearLayout
	      android:id="@+id/mainPanel"
	      android:layout_width="fill_parent"
	      android:layout_height="wrap_content"
	      android:background="@drawable/radio_bg"
	      android:orientation="vertical" >
	     
            <TextView
		     android:layout_width="wrap_content"
		     android:layout_height="wrap_content"
		     android:layout_gravity="center_horizontal"
		     android:layout_marginBottom="7dp"
		     android:layout_marginTop="7dp"
		     android:text="作业单正文"
		     android:textColor="#444444"
		     android:textSize="18sp" />
		
		    <TextView
		        android:id="@+id/zydId"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginBottom="5dp"
		        android:layout_marginTop="10dp"
		        android:text="ztdID:"
		        android:textColor="#444444"
		        android:textSize="16sp" />
		    <TextView
		        android:id="@+id/zylx"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginBottom="5dp"
		        android:layout_marginTop="10dp"
		        android:text="类型:"
		        android:textColor="#444444"
		        android:textSize="16sp" />
		    <TextView
		        android:id="@+id/zynum"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginBottom="5dp"
		        android:layout_marginTop="10dp"
		        android:text="数量:"
		        android:textColor="#444444"
		        android:textSize="16sp" />
		    <!-- TextView
		        android:id="@+id/zydpm"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginBottom="5dp"
		        android:layout_marginTop="10dp"
		        android:text="品名:"
		        android:textColor="#444444"
		        android:textSize="16sp" /> -->
		    <TextView
		        android:id="@+id/prehw"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginBottom="5dp"
		        android:layout_marginTop="10dp"
		        android:text="旧货位:"
		        android:textColor="#444444"
		        android:textSize="16sp" />
		    <TextView
		        android:id="@+id/facthw"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginBottom="5dp"
		        android:layout_marginTop="10dp"
		        android:text="实际货位:"
		        android:textColor="#444444"
		        android:textSize="16sp" />
		    <TextView
		        android:id="@+id/zydzt"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginBottom="5dp"
		        android:layout_marginTop="10dp"
		        android:text="状态:"
		        android:textColor="#444444"
		        android:textSize="16sp" />
		    <TextView
		        android:id="@+id/zydgdm"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginBottom="5dp"
		        android:layout_marginTop="10dp"
		        android:text="股道:"
		        android:textColor="#444444"
		        android:textSize="16sp" />
		    <TextView
		        android:id="@+id/zydstart"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginBottom="5dp"
		        android:layout_marginTop="10dp"
		        android:text="开始时间:"
		        android:textColor="#444444"
		        android:textSize="16sp" />
		    <TextView
		        android:id="@+id/zydend"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginBottom="5dp"
		        android:layout_marginTop="10dp"
		        android:text="结束时间:"
		        android:textColor="#444444"
		        android:textSize="16sp" />
		    
	</LinearLayout>	    
    </ScrollView>

	  <LinearLayout 
	    android:id="@+id/btn_layout"
        android:layout_width="match_parent" 
        android:layout_height="wrap_content" 
        android:layout_marginLeft="12dp" 
        android:layout_marginRight="12dp" 
        android:layout_marginTop="15dp" 
        android:layout_alignParentBottom="true" 
        android:background="@drawable/radio_bg" 
        android:orientation="vertical"> 
        
        <Button
	        android:id="@+id/changeXW"
	        android:layout_marginTop="10dp"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:background="@drawable/button_blue"
	        android:text="调整箱位"
	        android:padding="10dp"
	        android:textColor="#ffffff"
	        android:textSize="16sp"/>
	     <LinearLayout
		      android:id="@+id/spinnerLayout"
		      android:layout_width="fill_parent"
		      android:layout_height="wrap_content"
		      android:layout_marginLeft="32dp"
		      android:layout_marginRight="32dp"
		      android:layout_marginBottom="15dp"
		      android:background="@drawable/radio_bg"
		      android:visibility="gone"
		      android:orientation="vertical" >
		    
		    <Spinner
		        android:id="@+id/spinnerTrack"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginBottom="5dp" />
		    
			 <Spinner android:id="@+id/spinnerArea"   
		         android:layout_width="fill_parent"  
		         android:layout_height="wrap_content"
		         android:layout_marginBottom="5dp" />
			 
			 <Spinner android:id="@+id/spinnerPos"   
		         android:layout_width="fill_parent"  
		         android:layout_height="wrap_content"
		         android:layout_marginBottom="5dp" />
			 
			 <Spinner android:id="@+id/spinnerLastPos"   
		         android:layout_width="fill_parent"  
		         android:layout_height="wrap_content"
		         android:layout_marginBottom="5dp" />
			</LinearLayout>
			 
			<Button android:id="@+id/commit" 
			    android:layout_marginTop="10dp" 
			    android:layout_width="fill_parent" 
			    android:layout_height="wrap_content" 
			    android:background="@drawable/button_yellow" 
			    android:text="执行" 
			    android:padding="10dp" 
			    android:textColor="#ffffff" 
			    android:textSize="16sp" 
			    android:layout_marginBottom="10dp" /> 
			 
		    <!--<Button android:id="@+id/cancel" -->
		        <!--android:layout_marginTop="10dp" -->
		        <!--android:layout_width="fill_parent" -->
		        <!--android:layout_height="wrap_content" -->
		        <!--android:background="@drawable/button_blue" -->
		        <!--android:text="取消" -->
		        <!--android:padding="10dp" -->
		        <!--android:textColor="#ffffff" -->
		        <!--android:textSize="16sp" -->
		        <!--android:layout_marginBottom="20dp" />-->
		</LinearLayout>

</RelativeLayout>
