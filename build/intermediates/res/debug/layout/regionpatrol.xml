<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingTop="30dp"
     android:background="@drawable/bg_wood"
    >

    <RelativeLayout 
        android:id="@+id/top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_alignParentTop="true" 
        android:background="@drawable/preference_first_item">
        
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp" 
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID号："
            android:textSize="26sp"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/tvidnum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="26sp" />

    </LinearLayout>
        
        
    </RelativeLayout>

<RelativeLayout 
    android:id="@+id/mid"
    android:layout_height="wrap_content"
    android:layout_width="fill_parent"
	android:layout_below="@+id/top" 
	android:background="@drawable/preference_item"
    >


        <Spinner
            android:id="@+id/spinner1"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
             android:scrollbarSize="40sp"
            />

    
    
</RelativeLayout>


    <LinearLayout
        android:id="@+id/et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/preference_item"
        android:layout_below="@+id/mid" 
        android:padding="20dp">




        <EditText
            android:padding="5dp"
            android:id="@+id/et_nfcimp_context"
            style="@style/nor_edittext"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:ems="10"
            android:hint="备注"
            android:textSize="26sp"
            android:inputType="textMultiLine" />

    </LinearLayout>
	<RelativeLayout android:id="@+id/rlresult"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	            android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
         android:background="@drawable/preference_item"
	     android:layout_below="@+id/et">

	    <TextView android:id="@+id/tvresult"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="26sp"
	        android:gravity="center" />
	</RelativeLayout>
    <RelativeLayout android:id="@+id/sentbtn"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
         android:layout_below="@+id/rlresult"
        android:background="@drawable/preference_last_item"
       >
        
        <Button android:id="@+id/sent"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_style_green"
            android:text="上报"/>
    </RelativeLayout>


</RelativeLayout><!-- From: file:/Users/wgary/Documents/workspace/AndroidWorkbench2/HuoChang/res/layout/regionpatrol.xml -->